<h2 class="text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    <span><%= f.label :email %></span><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Enter Email", class: "form-control" %>
  </div>

  <div class="form-group input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your Password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div>
    <%= f.submit "Log in", class: 'btn btn-info btn-block' %>
  </div>
<% end %>

<div class="text-center"><%= render "devise/shared/links" %></div>

